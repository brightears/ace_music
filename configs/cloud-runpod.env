# =============================================================================
# ACE Music — RunPod Cloud GPU Configuration
# For deployment on RunPod GPU pods
# =============================================================================

# API connection — update with your pod's proxy URL after launch
# Format: https://<POD_ID>-8001.proxy.runpod.net
ACESTEP_API_URL=https://YOUR_POD_ID-8001.proxy.runpod.net
ACESTEP_API_KEY=sk-change-this-to-a-secure-key

# Model config (RTX 3090 24GB = full capability)
ACESTEP_CONFIG_PATH=acestep-v15-turbo
ACESTEP_LM_MODEL_PATH=acestep-5Hz-lm-1.7B
ACESTEP_LM_BACKEND=vllm
ACESTEP_DEVICE=cuda
ACESTEP_INIT_LLM=true

# Server (bind to all interfaces for RunPod proxy)
ACESTEP_API_HOST=0.0.0.0
ACESTEP_API_PORT=8001

# Output
ACESTEP_OUTPUT_DIR=./outputs

# Cloud GPU
CLOUD_GPU_PROVIDER=runpod

# Application
APP_ENV=staging
APP_LOG_LEVEL=info
