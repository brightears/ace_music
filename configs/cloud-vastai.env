# =============================================================================
# ACE Music — Vast.ai Cloud GPU Configuration
# For deployment on Vast.ai GPU instances
# =============================================================================

# API connection — update with your instance's public IP/port after launch
# Format: http://<INSTANCE_IP>:<PORT>
ACESTEP_API_URL=http://YOUR_INSTANCE_IP:8001
ACESTEP_API_KEY=sk-change-this-to-a-secure-key

# Model config
ACESTEP_CONFIG_PATH=acestep-v15-turbo
ACESTEP_LM_MODEL_PATH=acestep-5Hz-lm-1.7B
ACESTEP_LM_BACKEND=vllm
ACESTEP_DEVICE=cuda
ACESTEP_INIT_LLM=true

# Server (bind to all interfaces)
ACESTEP_API_HOST=0.0.0.0
ACESTEP_API_PORT=8001

# Output
ACESTEP_OUTPUT_DIR=./outputs

# Cloud GPU
CLOUD_GPU_PROVIDER=vastai

# Application
APP_ENV=staging
APP_LOG_LEVEL=info
