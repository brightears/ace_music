# =============================================================================
# ACE Music â€” Local Development Configuration
# For running on a local machine with a consumer GPU (RTX 3060/3070/3090)
# =============================================================================

# API connection (local ACE-Step server)
ACESTEP_API_URL=http://localhost:8001
ACESTEP_API_KEY=

# Model config (adjust based on your GPU VRAM)
# <= 8GB VRAM: use turbo with no LM
# 8-12GB: turbo + 0.6B LM
# 12-16GB: turbo + 1.7B LM (recommended)
# 16GB+: turbo + 1.7B or 4B LM
ACESTEP_CONFIG_PATH=acestep-v15-turbo
ACESTEP_LM_MODEL_PATH=acestep-5Hz-lm-1.7B
ACESTEP_LM_BACKEND=pt
ACESTEP_DEVICE=cuda
ACESTEP_INIT_LLM=auto

# Server
ACESTEP_API_HOST=127.0.0.1
ACESTEP_API_PORT=8001

# Output
ACESTEP_OUTPUT_DIR=./outputs

# Application
APP_ENV=development
APP_LOG_LEVEL=debug
